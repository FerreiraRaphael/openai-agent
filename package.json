{
  "name": "ai-agent-workspace",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "node-gyp": "^11.1.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "agent/src/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "client/src/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
